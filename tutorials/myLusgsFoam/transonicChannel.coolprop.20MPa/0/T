FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 360;

boundaryField
{
    emptyPlanes
    {
        type            empty;
    }
    "(.*Wall)"
    {
        type            zeroGradient;;
    }
    inlet
    {
        type            isentropicTemperature;
        T0              uniform 400;
        value           uniform 400;
    }

    outlet
    {
        type            zeroGradient;
    }
}

